{{outlet}}
{{#each this.model as |task|}}
  <div class="well">
    <h4>{{#link-to "tasks.edit" task.id}}{{task.title}}{{/link-to}}</h4>
    <small>Due: {{formatDate task.date}}</small>
    <p>{{task.description}}</p>
    <button {{action "deleteTask" task.id}} class="btn btn-danger">Delete task</button>
  </div>
{{/each}}
