<h1>All posts</h1>

<% @posts.each do |post| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.body %></p>
      <%= link_to "Read More", post_path(post), :class => 'btn btn-info' %>
    </div>
  </div>
<% end %>
